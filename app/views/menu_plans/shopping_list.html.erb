<h1>Shopping List <i class="fa fa-shopping-cart" aria-hidden="true"></i></h1>

<% if @menu_plan.recipes.empty? %>
  <p class="lead">No Recipes</p>
<% else %>
  <table class="table table-responsive table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Amount</th>
        <th scope="col">Ingredient</th>
      </tr>
    </thead>
    <tbody>
      <% @menu_plan.recipes.each do |recipe| %>
        <% recipe.parsed_ingredients.each do |ingredient| %>
          <tr>
            <th scope="row">
              <%= formatted_amount(ingredient) %>
            </th>
            <td>
              <%= ingredient.ingredient %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>
