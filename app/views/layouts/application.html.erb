<!DOCTYPE html>
<html>
<head>
  <title><%= @title || "Recipes" %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />

  <% if mobile_app? %>
    <% if current_user %>
      <%= yield :meta %>
    <% else %>
      <link rel="mobile-navigation" href="<%= new_session_url %>" title="Sign in" />
    <% end %>
  <% end %>


  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet">
  <%= stylesheet_link_tag "application", media: "all" %>

  <%= javascript_include_tag "vendor" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <% if current_user %>
  <script>
    window.currentMenuPlan = new MenuPlan(<%= raw MenuPlanPresenter.new(current_user.current_menu_plan).to_json %>);
  </script>
  <% end %>
</head>
<body>

  <%= render "layouts/navigation" unless mobile_app? %>

<% if show_menu_plan? -%>
  <div class="container with-menu-plan">
    <div id="recipe_drawer_root" class="d-flex justify-content-around"></div>
<% else -%>
  <div class="container">
<% end -%>
    <main>
      <%= yield %>
    </main>
  </div>

</body>
</html>
