<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <%= link_to recipes_path, class: "navbar-brand" do %>
      <span class="glyphicon glyphicon-cutlery"></span>
      <span class="brand-name">Recipes</span>
    <% end %>

    <ul class="nav navbar-nav">
      <% if can? :create, Recipe %>
        <li><%= link_to "New Recipe", new_recipe_path %></li>
      <% end %>
    </ul>

    <ul class="nav navbar-nav pull-right">
      <% if current_user -%>
        <li class="dropdown ">
          <a href="#" class="dropdown-toggle nav-link-large" data-toggle="dropdown"><%= avatar_for(current_user, size: 36) %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
            <li><%= link_to "Sign out", destroy_user_session_path %></li>
          </ul>
        </li>
      <% else -%>
        <li><%= link_to "Sign in", new_user_session_path %></li>
      <% end -%>
    </ul>
  </div>
</div>
